<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="baseLogDir">logs</Property>
		<Property name="baseDataDir">archive</Property>
	</Properties>
	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		</Console>
		<RollingFile name="LogToRollingFile" fileName="${baseLogDir}/app.log"
					 filePattern="${baseLogDir}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.zip">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="5 KB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${baseLogDir}" maxDepth="2">
					<IfFileName glob="*/app.*.log.zip" />
					<IfLastModified age="P1D" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
		<RollingFile name="LogToDataRollingFile" fileName="${baseDataDir}/%X{logPath}/data.txt"
					 filePattern="${baseDataDir}/%X{logPath}/$${date:yyyy-MM}/$${date:dd}/%X{logName}-%d{yyyyMMdd-HHmm}-%i.txt.zip">
			<PatternLayout>
				<Pattern>%m%n</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="100 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${baseDataDir}" maxDepth="3">
					<IfFileName glob="data.*.txt.zip" />
					<!--<IfLastModified age="P365D" />-->
					<IfLastModified age="P1D" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
		<SplunkHttp
				name="httpconf"
				url="http://192.168.166.7:8088"
				token="8e514702-9572-4eb1-946b-cc00b93c74ef"
				host=""
				index=""
				source="splunktest"
				sourcetype="battlecat"
				messageFormat="text"
				batch_interval="0"
				batch_size_bytes="0"
				batch_size_count="0"
				disableCertificateValidation="true"
				middleware="HttpEventCollectorUnitTestMiddleware"
		>
			<PatternLayout pattern="%m"/>
		</SplunkHttp>
	</Appenders>
	<Loggers>
		<!-- avoid duplicated logs with additivity=false -->
		<Logger name="com.ceramic" level="debug" additivity="false">
			<AppenderRef ref="LogToRollingFile"/>
		</Logger>
		<Logger name="com.vx6" level="debug" additivity="false">
			<AppenderRef ref="LogToRollingFile"/>
		</Logger>
		<Logger name="sapta.data.in.trans" level="info" additivity="false">
			<AppenderRef ref="LogToDataRollingFile"/>
		</Logger>
		<Root level="error">
			<AppenderRef ref="LogToConsole"/>
		</Root>
		<Logger name="splunk.logger" level="info">
			<AppenderRef ref="httpconf"/>
		</Logger>
	</Loggers>
</Configuration>